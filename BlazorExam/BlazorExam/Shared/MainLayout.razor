@inherits LayoutComponentBase

<PageTitle>Blazor</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <spam class="ml-md-auto">
                        Usuario Conectado:@context.User.Claims.First().Value
                        <a href="/account/logout">Salir</a>
                    </spam>
                </Authorized>
                
                <NotAuthorized>
                    <a href="login">Iniciar Sesion</a>
                </NotAuthorized>

            </AuthorizeView>
            
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>